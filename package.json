{
  "name": "muffle",
  "version": "1.0.0",
  "description": "A beautiful, fluid Spotify desktop client",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "type": "module",
  "keywords": ["spotify", "music", "electron", "svelte"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^25.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "github:castlabs/electron-releases#v34.0.0+wvcus",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "svelte": "^5.16.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.6",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "motion": "^12.0.0"
  },
  "build": {
    "appId": "al.kaleid.muffle",
    "afterSign": "scripts/evs_sign.cjs",
    "productName": "Muffle",
    "directories": {
      "output": "release"
    },
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns",
      "hardenedRuntime": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "trustedDependencies": [
    "electron"
  ]
}
