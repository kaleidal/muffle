{
  "name": "muffle",
  "version": "0.0.0",
  "author": {
    "name": "Kaleidal",
    "email": "hello@kaleid.al"
  },
  "main": "electron/main.cjs",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^25.0.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "svelte": "^5.16.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.0.6",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "al.kaleid.muffle",
    "productName": "Muffle",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "kaleidal",
      "repo": "muffle"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/librespot",
        "to": "librespot",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png",
      "hardenedRuntime": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "description": "A beautiful, fluid Spotify desktop client",
  "homepage": "https://muffle.kaleid.al",
  "keywords": [
    "spotify",
    "music",
    "electron",
    "svelte"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "vite build && electron-builder"
  },
  "trustedDependencies": [
    "electron"
  ],
  "type": "module"
}
